<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
  >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardview_compat_inset_shadow"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        app:cardBackgroundColor="@color/design_default_color_surface"
        app:circularflow_radiusInDP="100DP">

        <ImageView
            android:id="@+id/imageViewofship"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:contentDescription="image"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/nameofship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="190dp"
            android:layout_marginTop="80dp"
            android:ems="10"
            android:text="Name of ship"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="69dp" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>